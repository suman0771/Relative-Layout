<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout
    android:background="#FFEB3B"
    tools:ignore="ExtraText"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="40dp"
        android:textColor="#ca1a11"
        android:layout_marginTop="30dp"
        android:text="Order Veg Pizza"
        android:gravity="center"
        android:fontFamily="sans-serif-black"/>

    <ImageView
        android:layout_height="120dp"
        android:layout_width="200dp"
        android:layout_marginTop="90dp"
        app:srcCompat="@mipmap/food"
        android:layout_marginStart="110dp"
        android:id="@+id/imageView"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="30dp"
        android:textColor="#C51D1D"
        android:layout_marginTop="215dp"
        android:text="Choose Flavourful Pizza!"
        android:gravity="center"
        android:id="@+id/editTextTextPersonName"
        android:inputType="textPersonName"
        android:fontFamily="sans-serif-black"
        android:ems="10"
        android:textColorHighlight="#DA6E6E"
        android:layout_marginBottom="47dp"/>


    <RadioGroup
        android:layout_height="wrap_content"
        android:layout_width="340dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:id="@+id/radioGroup">

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:checked="true"
            android:text="Peppy Paneer"
            android:textColor="#c51d1d"
            android:textColorHighlight="#c51d1d"
            android:textSize="30dp" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Farm House"
            android:textColor="#c51d1d"
            android:textSize="30dp" />

    <RadioButton
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="30dp"
        android:textColor="#c51d1d"
        android:layout_marginTop="15dp"
        android:text="Veggie Paradise"
        android:id="@+id/radioButton4"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Panner Makhani"
            android:textColor="#c51d1d"
            android:textSize="30dp"

            />

</RadioGroup>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="25dp"
        android:layout_marginTop="530dp"
        android:layout_marginStart="25dp"
        android:id="@+id/editTex"
        android:inputType="textPersonName"
        android:ems="10"
        android:textColorHint="#c51d1d"
        android:background = "@drawable/round"
        android:hint="@string/optional"
        android:layout_marginEnd="55dp"
        />

    <CheckBox
        android:layout_height="50dp"
        android:layout_width="350dp"
        android:textSize="18dp"
        android:textColor="#c51d1d"
        android:layout_marginTop="570dp"
        android:text="Order Now!"
        android:fontFamily="sans-serif-black"
        android:layout_marginStart="100dp"
        android:id="@+id/checkBox2"
        android:textAllCaps="true"
        android:background = "@drawable/roundedbutton"
        android:layout_marginEnd="100dp"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="480dp"
        android:textSize="30dp"
        android:textColor="#880F0F"
        android:layout_marginTop="630dp"
        android:text="Make Payment"
        android:gravity="center"
        android:layout_marginStart="40dp"
        android:id="@+id/button"
        android:layout_marginEnd="40dp"
        android:textAllCaps="true"
        android:backgroundTint="#BF33CCDA"/>

</RelativeLayout>